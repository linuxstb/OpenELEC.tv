PKG_NAME="mpg123"
PKG_VERSION="1.14.4"
PKG_REV="1"
PKG_ARCH="any"
PKG_LICENSE="LGPL"
PKG_SITE="http://www.mpg123.org"
PKG_URL="$SOURCEFORGE_SRC/mpg123/mpg123/$PKG_VERSION/$PKG_NAME-$PKG_VERSION.tar.bz2"
PKG_DEPENDS=""
PKG_BUILD_DEPENDS="toolchain"
PKG_PRIORITY="optional"
PKG_SECTION="audio"
PKG_SHORTDESC="mpg123: A fast and Free (LGPL license) real time MPEG Audio Layer 1, 2 and 3 decoding library and console player."
PKG_LONGDESC="mpg123 is a fast and Free (LGPL license) real time MPEG Audio Layer 1, 2 and 3 decoding library and console player. It uses floating point or integer math, along with several special optimizations (3DNow, SSE, ARM, ...) to make it most efficient."
PKG_IS_ADDON="no"

PKG_AUTORECONF="yes"
